<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dip"
                android:background="@drawable/icon"
                android:textAllCaps="false"
                android:textSize="30pt"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/icon"
                android:layout_weight="0.81"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon"
                android:text="Welcome"
                android:textAllCaps="false"
                android:textSize="25pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/app_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_title"
                android:textAllCaps="false"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/user_name" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="HotBook"
                android:textAllCaps="false"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/hot"
                android:background="@drawable/green_inside"
                android:layout_weight="1.78"
                android:layout_below="@+id/user_name"
                android:layout_toStartOf="@+id/icon_1"
                android:layout_toLeftOf="@+id/icon_1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/user_name"
                android:text="MyBook"
                android:textAllCaps="false"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/my"
                android:background="@drawable/textview_border"
                android:layout_weight="1.78"
                android:layout_toRightOf="@+id/hot"
                android:layout_toEndOf="@+id/icon_1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/hot"
                android:text="Record"
                android:textAllCaps="false"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/record"
                android:background="@drawable/textview_border"
                android:layout_weight="1.78"
                android:layout_toStartOf="@+id/icon_1"
                android:layout_toLeftOf="@+id/icon_1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/my"
                android:text="ContactUs"
                android:textAllCaps="false"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/contact"
                android:background="@drawable/textview_border"
                android:layout_weight="1.78"
                android:layout_toRightOf="@+id/record"
                android:layout_toEndOf="@+id/icon_1" />

            <!-- TODO><-->

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/record"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/icon"
                android:textAllCaps="false"
                android:textSize="30pt"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/icon_1" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
