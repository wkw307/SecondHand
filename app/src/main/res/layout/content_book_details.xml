<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">




    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/return_previous"
            style="?android:textAppearanceSmall"
            android:layout_width="20dp"
            android:layout_height="20dip"
            android:background="@drawable/return_previous"
            android:gravity="left"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dip"
            android:background="@drawable/icon"
            android:textAllCaps="false"
            android:textSize="30pt"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/icon"
            android:layout_weight="0.81" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Detail"
            android:textAllCaps="false"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:id="@+id/app_title" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="100dip"
            android:background="@drawable/icon"
            android:layout_gravity="center"
            android:id="@+id/book_pic"
            android:layout_weight="0.81" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#848484"
            android:gravity="center"
            android:id="@+id/name_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AAA"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#848484"
            android:gravity="center"
            android:id="@+id/author_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BBB"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/author" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#848484"
            android:gravity="center"
            android:id="@+id/detail_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="crapcrapcrap"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:textColor="#01DF01"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/detail" />
    </LinearLayout>>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="80dip"
            android:paddingRight="8dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip">

            <TextView
                android:id="@+id/status"
                style="?android:textAppearanceSmall"
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:background="@drawable/grey_inside"
                android:text="Almost New"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/price"
                style="?android:textAppearanceSmall"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:background="@drawable/grey_inside"
                android:text="$200"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toRightOf="@+id/status"
                android:layout_toEndOf="@+id/icon_1"/>

            <Button
                android:id="@+id/icon_1"
                style="?android:textAppearanceSmall"
                android:layout_width="200dip"
                android:layout_height="30dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:text="Send Now"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_below="@id/price"
                android:textSize="10pt"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
